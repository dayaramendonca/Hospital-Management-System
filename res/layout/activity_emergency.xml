<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >

    <Button
        android:id="@+id/patient_investigation"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:text="Other Services"
        android:textColor="#000"
        android:textSize="20sp" 
        android:background="#abebc6" />

    <Button
        android:id="@+id/patient_prescription"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_above="@+id/patient_status"
        android:layout_alignLeft="@+id/patient_status"
        android:layout_marginBottom="40dp"
        android:text="Ambulance Service"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="#abebc6"
        android:padding="5dp" />

    <Button
        android:id="@+id/patient_status"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_above="@+id/patient_investigation"
        android:layout_alignLeft="@+id/patient_investigation"
        android:layout_marginBottom="30dp"
        android:text="Important Contacts"
        android:textColor="#000"
        android:textSize="20sp" 
        android:background="#abebc6" 
        android:padding="5dp"/>

</RelativeLayout>