<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >
    
     <TextView
         android:id="@+id/textViewsm2"
         style="@style/BlackText"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="211dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="WELCOME! "
         android:textColor="#FFFF00" />

    <Button
        android:id="@+id/staff_fi"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/staff_ai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Fire This Staff"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/staff_ai"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/staff_fi"
        android:layout_below="@+id/textViewsm2"
        android:layout_marginTop="33dp"
        android:text="All Information"
        android:textColor="#000"
        android:background="#abebc6" />

</RelativeLayout>