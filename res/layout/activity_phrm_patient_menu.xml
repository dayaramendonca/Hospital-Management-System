<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".AdminActivity"
    >
    
     <TextView
         android:id="@+id/textViewc1"
         style="@style/BlackText"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="211dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="WELCOME! "
         android:textColor="#FFFF00" />

    <Button
        android:id="@+id/ph_report"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ph_all_patients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Generate Report"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/ph_pstatus"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ph_report"
        android:layout_below="@+id/ph_report"
        android:layout_marginTop="22dp"
        android:text="Patient Status"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/ph_all_patients"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ph_report"
        android:layout_below="@+id/textViewc1"
        android:layout_marginTop="31dp"
        android:text="View Prescription"
        android:textColor="#000"
        android:background="#abebc6" />

</RelativeLayout>