<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >
    
     <TextView
         android:id="@+id/textViewp1"
         style="@style/BlackText"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="211dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="My Full Name"
         android:textColor="#FFFF00" />

    <Button
        android:id="@+id/pharmacist_status"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pharmacist_all_patients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="My Current Status"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/pharmacist_all_patients"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pharmacist_status"
        android:layout_below="@+id/textViewp1"
        android:layout_marginTop="46dp"
        android:text="View All Patients"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/Buttonp1"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pharmacist_status"
        android:layout_below="@+id/pharmacist_status"
        android:layout_marginTop="26dp"
        android:text="Admin Notice"
        android:textColor="#000"
        android:background="#abebc6" />

</RelativeLayout>