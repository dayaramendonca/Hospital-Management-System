<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >
    
     <TextView
         android:id="@+id/textViewc1"
         style="@style/BlackText"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="211dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="WELCOME! "
         android:textColor="#FFFF00" />

    <Button
        android:id="@+id/cdoctor_status"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cdoctor_all_patients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="My Current Status"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/Buttonad91"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Buttonc1"
        android:layout_below="@+id/Buttonc1"
        android:layout_marginTop="22dp"
        android:text="All Admissions"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/cdoctor_all_patients"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/cdoctor_status"
        android:layout_below="@+id/textViewc1"
        android:layout_marginTop="48dp"
        android:text="View All Patients"
        android:textColor="#000" 
        android:background="#abebc6"/>

    <Button
        android:id="@+id/Buttonc1"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/cdoctor_status"
        android:layout_below="@+id/cdoctor_status"
        android:layout_marginTop="20dp"
        android:text="Admin Notice"
        android:textColor="#000"
        android:background="#abebc6" />

</RelativeLayout>