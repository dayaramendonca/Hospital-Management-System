<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >

    <Button
        android:id="@+id/admission_btn1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admission_btn2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="View Current Admissions"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="#abebc6"
        android:padding="10dp" />

    <Button
        android:id="@+id/admission_btn3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admission_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Discharge A Patient"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="#abebc6"
        android:padding="10dp" />

    <Button
        android:id="@+id/admission_btn4"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admission_btn3"
        android:layout_below="@+id/admission_btn3"
        android:layout_marginTop="26dp"
        android:text="View Admission History"
        android:textColor="#000"
        android:textSize="20sp" 
        android:background="#abebc6"
        android:padding="10dp"/>

    <Button
        android:id="@+id/admission_btn2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admission_btn3"
        android:layout_below="@+id/admission_btn1"
        android:layout_marginTop="32dp"
        android:text="Admit A New Patient"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="#abebc6"
        android:padding="10dp" />

</RelativeLayout>