<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="707dp"
    android:background="#08253c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/EditTextnad04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextnad03"
        android:layout_below="@+id/EditTextnad03"
        android:layout_marginTop="45dp"
        android:background="#ffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/EditTextnad03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextnad02"
        android:layout_alignStart="@+id/p_username"
        android:layout_below="@+id/EditTextnad02"
        android:layout_marginTop="41dp"
        android:background="#ffffff"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/EditTextnad02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextnad01"
        android:layout_alignStart="@+id/p_username"
        android:layout_below="@+id/TextView01"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="NEW PATIENT ADMISSION"
        android:textColor="#ffff00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextnad03"
        android:layout_below="@+id/EditTextnad02"
        android:layout_marginTop="19dp"
        android:text="Ward No :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/register_buttonnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextnad04"
        android:layout_marginTop="54dp"
        android:text="Confirm Admission"
        android:textColor="#000" 
        android:background="#abebc6"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/EditTextnad01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignStart="@+id/p_username"
        android:layout_below="@+id/p_username"
        android:background="#ffffff"
        android:padding="10dp"
        android:ems="10" />

    <TextView
        android:id="@+id/p_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView08"
        android:layout_marginTop="28dp"
        android:text="Patient ID :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/p_username"
        android:layout_below="@+id/EditTextnad01"
        android:layout_marginTop="24dp"
        android:text="Doctor ID :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextnad04"
        android:layout_below="@+id/EditTextnad03"
        android:layout_marginTop="22dp"
        android:text="Cabin No :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>

</ScrollView>