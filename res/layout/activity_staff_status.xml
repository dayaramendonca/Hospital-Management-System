<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08253c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PatientStatusActivity" >
    
    <TextView
        android:id="@+id/TextViewc3"
        style="@style/BlackText"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#99CCFF"
        android:gravity="left"
        android:text="Current Status:"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextViewc2"
        style="@style/BlackText"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewc3"
        android:layout_centerHorizontal="true"
        android:background="#CCFFFF"
        android:gravity="center"
        android:minHeight="60dp"
        android:textSize="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/textViewc5"
        style="@style/BlackText"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextViewc4"
        android:layout_below="@+id/TextViewc4"
        android:layout_marginTop="18dp"
        android:background="#CCFFFF"
        android:gravity="center"
        android:minHeight="60dp"
        android:textSize="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextViewc4"
        style="@style/BlackText"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextViewc2"
        android:background="#99CCFF"
        android:gravity="left"
        android:text="New Status:"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/c_status"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewc5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="UPDATE"
        android:textColor="#000" 
        android:background="#d0d3d4"/>

</RelativeLayout>