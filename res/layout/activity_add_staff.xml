<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="767dp"
    android:background="#08253c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/sEditText02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText01"
        android:layout_below="@+id/sEditText01"
        android:layout_marginTop="45dp"
        android:background="#ffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/sEditText01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stf_username_field"
        android:layout_alignStart="@+id/s_username"
        android:layout_below="@+id/stf_username_field"
        android:layout_marginTop="41dp"
        android:background="#ffffff"
        android:ems="10">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/sEditText05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText04"
        android:layout_below="@+id/sEditText04"
        android:layout_marginTop="39dp"
        android:background="#ffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/sEditText03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText06"
        android:layout_below="@+id/sEditText06"
        android:layout_marginTop="41dp"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sEditText02"
        android:layout_marginTop="33dp"
        android:text="Phone No :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sEditText04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText02"
        android:layout_below="@+id/TextView04"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sEditText02"
        android:layout_marginBottom="22dp"
        android:text="Sex :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sEditText07"
        android:layout_marginTop="28dp"
        android:text="Staff Username :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/stf_username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText07"
        android:layout_alignStart="@+id/s_username"
        android:layout_below="@+id/TextView01"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="NEW STAFF REGISTRATION"
        android:textColor="#ffff00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText03"
        android:layout_below="@+id/sEditText06"
        android:layout_marginTop="19dp"
        android:text="Address :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText05"
        android:layout_below="@+id/sEditText04"
        android:layout_marginTop="17dp"
        android:text="Age :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText01"
        android:layout_below="@+id/stf_username_field"
        android:layout_marginTop="19dp"
        android:text="Login Password :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/stf_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText03"
        android:layout_below="@+id/sEditText03"
        android:layout_marginTop="54dp"
        android:text="Confirm Registration"
        android:textColor="#000" 
        android:background="#abebc6"/>

    <TextView
        android:id="@+id/s_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView08"
        android:layout_marginTop="31dp"
        android:text="Staff Name :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sEditText07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignStart="@+id/s_username"
        android:layout_below="@+id/s_username"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText05"
        android:layout_below="@+id/sEditText05"
        android:layout_marginTop="90dp"
        android:text="Designation ID : \n 1:Super Admin, 2:Sub Admin, 3:Consulting Doctor, 4:Investigating Doctor, 5:Pharmacist"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sEditText08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView09"
        android:layout_below="@+id/TextView09"
        android:background="#ffffff"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sEditText05"
        android:layout_below="@+id/sEditText05"
        android:layout_marginTop="24dp"
        android:text="Speciality :"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sEditText06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView06"
        android:layout_below="@+id/TextView06"
        android:background="#ffffff"
        android:ems="10" />

</RelativeLayout>

</ScrollView>