<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    >

    <Button
        android:id="@+id/Buttonpp4"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Buttonpp3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Admission Charges"
        android:textColor="#000" 
        android:background="#abebc6"/>

    <Button
        android:id="@+id/Buttonpp5"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Buttonpp4"
        android:layout_below="@+id/Buttonpp4"
        android:layout_marginTop="16dp"
        android:text="Discharge Amount"
        android:textColor="#000" 
        android:background="#abebc6"/>

    <Button
        android:id="@+id/Buttonpp3"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Buttonpp4"
        android:layout_below="@+id/Buttonpp2"
        android:layout_marginTop="15dp"
        android:text="Pharmacy Bill"
        android:textColor="#000"
        android:background="#abebc6"/>

    <Button
        android:id="@+id/Buttonpp6"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Buttonpp5"
        android:layout_below="@+id/Buttonpp5"
        android:layout_marginTop="22dp"
        android:text="Extra Charges"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/Buttonpp1"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Buttonpp2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Outdoor Payment"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/Buttonpp2"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Buttonpp3"
        android:layout_below="@+id/Buttonpp1"
        android:layout_marginTop="20dp"
        android:text="Investigation Amount"
        android:textColor="#000"
        android:background="#abebc6"
        android:padding="5dp" />

</RelativeLayout>

</ScrollView>