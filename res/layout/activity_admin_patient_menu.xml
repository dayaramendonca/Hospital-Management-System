<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".CopyAdminActivity"
    >
    
     <TextView
         android:id="@+id/textViewcm1"
         style="@style/BlackText"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="211dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="WELCOME! "
         android:textColor="#FFFF00" />

    <Button
        android:id="@+id/inv_adpm"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pres_adpm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="#abebc6"
        android:text="Investigations"
        android:textColor="#000" />

    <Button
        android:id="@+id/stat_adpm"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/inv_adpm"
        android:layout_below="@+id/inv_adpm"
        android:layout_marginTop="20dp"
        android:background="#abebc6"
        android:text="Patient Status"
        android:textColor="#000" />

    <Button
        android:id="@+id/pres_adpm"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/inv_adpm"
        android:layout_below="@+id/textViewcm1"
        android:layout_marginTop="33dp"
        android:text="Prescription"
        android:textColor="#000"
        android:background="#abebc6" />

    <Button
        android:id="@+id/pay_adpm"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_adpm"
        android:layout_centerHorizontal="true"
        android:background="#abebc6"
        android:layout_marginTop="20dp"
        android:text="Patient Payments"
        android:textColor="#000" />

    <Button
        android:id="@+id/ButtonPtPi"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pay_adpm"
        android:background="#abebc6"
        android:layout_below="@+id/pay_adpm"
        android:layout_marginTop="20dp"
        android:text="Personal Info"
        android:textColor="#000" />

</RelativeLayout>